Dim txt As String
    Dim firstChar As String

    Set ws = ActiveSheet
    lastRow = ws.Cells(ws.Rows.Count, "C").End(xlUp).Row

    For i = lastRow To 1 Step -1
        
        ' Clean text: remove leading/trailing spaces & invisible characters
        txt = Trim(ws.Cells(i, "C").Value)
        txt = Replace(txt, Chr(160), "")
        
        If txt <> "" Then
            firstChar = Left(txt, 1)
            
            ' Delete row if first character is NOT 0â€“9
            If Not (firstChar Like "[0-9]") Then
                ws.Rows(i).Delete
            End If
        End If
        
    Next i

    MsgBox "Finished! All non-number addresses removed from Column C."

End Sub
